<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        
        <div class="table-data">
            <table border="1" >
                <tr>
                    <th>number</th>
                    <th>date</th>
                    <th>customer name</th>
                    <th>total value</th>
                    <th>item name</th>
                    <th>quantity</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                
                <%
                if(fetchData.length!=0){
                var i=1;
                fetchData.forEach(function(data){
                %>
                <tr>
                    <td><%=data.number%></td>
                    <td><%=data.date %></td>
                    <td><%=data.customerName %></td>
                    <td><%=data.totalValue %></td>
                    <td><%=data.itemName %></td>
                    <td><%=data.quantity %></td>
                    <td><a href="/admin/edit/invoice/<%=data.number%>">Edit</a></td>
                    <td><a href="/admin/delete/invoice/<%=data.number%>">Delete</a></td>
                </tr>
               
                <%  i++; }) %>

                <% } else{ %>
                    <tr>
                        <td colspan="7">No Data Found</td>
                    </tr>
                <% } %>
            </table>
            </div>
    </main>
<%- include('../includes/end.ejs') %>